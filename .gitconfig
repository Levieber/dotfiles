[user]
	# Update and uncomment the following lines
  #	email = {public GitHub email}
  #	name = {GitHub username}
  #	signingkey = {GPG signing key for use with GitHub}

[commit]
	gpgsign = true

[tag]
	gpgsign = true

[push]
	followTags = true
  default = current
  autoSetupRemote = true

[init]
	defaultBranch = main

[core]
  editor = code
  pager = delta

[interactive]
  diffFilter = delta --color-only

[include]
  path = ~/.config/delta/themes/catppuccin.gitconfig

[delta]
  line-numbers = true
  features = catppuccin-mocha

[alias]
  undo = reset --soft HEAD^

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/
